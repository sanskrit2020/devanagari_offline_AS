<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.devanagari_offline"
    android:versionCode="13"
    android:versionName="1.13" >

    <uses-sdk
        android:targetSdkVersion="18"
        android:maxSdkVersion="19"
         />

    <application
        android:icon="@drawable/ic_launcher"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:allowBackup="false"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.devanagari_offline.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" >
                </category>
                <category android:name="android.intent.category.BROWSABLE" >
                </category>


            </intent-filter>
        </activity>
        <activity
            android:name="com.android.devanagari_offline.NewsActivityv11"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" />
        <activity
            android:name="com.android.devanagari_offline.Preferences"
            android:label="@string/app_name" />
    </application>

</manifest>